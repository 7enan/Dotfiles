(defpoll current_date_time
    :interval "1s"
    "LC_TIME=pt_BR.UTF-8 date +'%H:%M'")

(defwindow date_time_widget
    :monitor 0
    :geometry (geometry :x "70%" :y "0%" :width "60px" :height "30px" :anchor "top right")
    :stacking "fg"
    (box :class "date-time-box"
        (label :text current_date_time)))
