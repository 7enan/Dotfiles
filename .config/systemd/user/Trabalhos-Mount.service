[Unit]
Description=Montar Google Drive (rclone) - Pasta Trabalhos
AssertPathIsDirectory=%h/GDrives/Trabalhos
After=network-online.target

[Service]
Type=notify
ExecStart=/usr/bin/rclone mount Trabalhos: %h/GDrives/Trabalhos \
  --config=%h/.config/rclone/rclone.conf \
  --vfs-cache-mode=full \
  --vfs-cache-max-size=5G \
  --dir-cache-time=12h \
  --poll-interval=1m \
  --allow-other

ExecStop=/bin/fusermount -u %h/GDrives/Trabalhos
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target

